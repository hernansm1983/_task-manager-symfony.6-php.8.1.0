<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <link href="{{ asset('Assets/style_ninja.css') }}" type="text/css" rel="stylesheet" />
        
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block header %}
        <div id="header">
            <h1>Tareas Symfony</h1>
            <ul id="menu">
                <li><a href="{{ path('tasks') }}" >Inicio</a></li>
                {% if app.user %}
                    <li><a href="{{ path('my_tasks') }}" >Mis Tareas</a></li>
                    <li><a href="{{ path('task_creation') }}" >Crear Tarea</a></li>
                    <li class="right"><a href="{{ path('logout') }}" >Logout</a></li>
                    <li class="right">{{ app.user.name ~ ', ' ~ app.user.surname }}</li>
                {% else %}
                    <li><a href="{{ path('login') }}" >Login</a></li>
                    <li><a href="{{ path('register') }}" >Registro</a></li>
                {% endif %}
            </ul>
        </div>
        <div class="clearfix"></div>
        {% endblock %}
            
        {% block body %}{% endblock %}
    </body>
</html>
